{
  "name": "n2tui",
  "version": "1.0.0",
  "description": "Provides a web browser interface to microN2T",
  "main": "index.js",
  "scripts": {
    "build-css": "cross-env ENV_BUILD=prod postcss src/css/main.css -o build/css/main.css",
    "build-js": "node esbuilder.js",
    "build-html": "copyfiles -u 1 src/**/*.html src/img/** build",
    "watch-css": "postcss src/css/main.css -o build/css/main.css -w",
    "watch-js": "onchange \"src/js\" -- run-s build-js",
    "watch-html": "onchange \"src/**/*.html\" -- run-s build-html",
    "serve": "browser-sync start -c bs-config.js",
    "dev": "run-p build-js build-html serve watch-*",
    "copy": "copyfiles -u 1 build/* build/**/* dist",
    "deploy": "npm run clean && npm run build-html && npm run build-css && npm run build-js && npm run copy",
    "clean": "rm -rf dist/* && rm -rf build/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CDLUC3/N2T.git"
  },
  "keywords": [
    "identifier",
    "resolve",
    "CDLUC3"
  ],
  "author": "Dave Vieglais",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CDLUC3/N2T/issues"
  },
  "homepage": "https://github.com/CDLUC3/N2T#readme",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "alpinejs": "^3.7.0",
    "gh-corner-wc": "github:datadavev/gh-corner",
    "lit": "^2.0.2",
    "tailwindcss": "^2.2.19"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "autoprefixer": "^10.4.0",
    "browser-sync": "^2.27.7",
    "concurrently": "^6.4.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.12",
    "esbuild": "^0.14.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.4",
    "postcss-cli": "^9.0.2",
    "postcss-copy": "^7.1.0",
    "postcss-import": "^14.0.2"
  }
}
